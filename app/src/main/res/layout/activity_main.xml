<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.cs.lottery.LotteryView
        android:id="@+id/lottery_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:textSize="14sp"
        app:ballCount="8"
        app:ballRadius="32dp" />

    <EditText
        android:id="@+id/lottery_name_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lottery_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/confirm_name_bt"
        android:hint="输入名字，','隔开"
        android:text="陈帅,刘照天，郑理，王鹏，陈宇，黄芳艳，金佳茜" />

    <Button
        android:id="@+id/confirm_name_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/lottery_name_et"
        android:text="确认名字"
        app:layout_constraintStart_toEndOf="@id/lottery_name_et"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/start_roll_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/lottery_name_et"
        android:text="开始"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/restart_roll_bt" />

    <Button
        android:id="@+id/restart_roll_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/start_roll_bt"
        app:layout_constraintStart_toEndOf="@id/start_roll_bt"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="重新开始"
        android:visibility="gone" />

    <TextView
        android:id="@+id/goat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/start_roll_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        tools:text="恭喜你获得陈帅的礼物"
        android:textColor="#000" />


</androidx.constraintlayout.widget.ConstraintLayout>